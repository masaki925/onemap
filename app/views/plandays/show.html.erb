<% content_for :javascript_includes do %>
  <%= javascript_include_tag "plandays/plandays" %>
<% end %>

<div class="row planHeader" >

  <!--Title + Tags + Add PLan Button -->
  <div class="span12">
    <div class="pull-left">
      <h3><%= link_to @planday.plan.title, @planday.plan %> Day <%= @planday.day %></h3>
    </div>
    <div class="pull-right">
      <ul  class="themeTags">
        <a href="#">Tags</a>
        <li>Culture</li>
        <li>Photography</li>
        <li>Romantic</li>
      </ul>
    </div>
  </div>

  <div class="span12">

    <!-- Creator Image + Creator Name -->
    <div class="pull-right createdBy">
      <img id="userProfile" src="/assets/profilePic.jpg">
      <div class="profileInfo">
        <a href="#"><h5>Created by Justin</h5></a>
        <a href="#">31416 points</a><br>
        <a href="#">MASTER level</a>
      </div>
    </div>

    <!-- Duration (hours) + Rating + Reviews + Currency + Budget   -->
    <div class="pull-left lengthBudget">
      <h5>3.1 ★★★☆☆ <a href="#">(See Reviews)</a></h5>
      <h5>$200</h5>
      <h5><button class="currency">Currency</button></h5><br>

    </div>
    <div class="pull-left addButton">
      <a class="btn">Add to my Plan</a>

      <%= link_to 'Back', plan_path(@planday.plan), :class => 'btn' %>
      <%= link_to 'Edit', edit_planday_path(@planday), :class => 'btn' %>
    </div>
  </div>
</div>

<div class="row">

  <!--Photo viewer -->
  <div class="span6 photoviewer">
    <div id="photoNav">
      <ul>
        <li class="photoNav thumb"><img src="/assets/italyThumb.jpg"></li>
        <li class="photoNav thumb"><img src="/assets/italyThumb.jpg"></li>
        <li class="photoNav middle"><img src="/assets/italyThumb.jpg"></li>
        <li class="photoNav thumb"><img src="/assets/italyThumb.jpg"></li>
        <li class="photoNav thumb"><img src="/assets/italyThumb.jpg"></li>
      </ul>
    </div>
    <div id="photoContainer">
      <!--The page Container is a ul list of photos-->
      <ul>
        <li><img src="/assets/italyTower.JPG"></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>

      </ul>
    </div>
    <!-- arrows must have a higher z-index-->
    <div class="arrow left"><img src="/assets/arrow_left.png"></div>
    <div class="arrow right"><img src="/assets/arrow_right.png"></div>
  </div>

  <!-- Map -->
  <div class="span6 mapDiv">
    <div class="span3" id="mapButtonDiv">
      <button class="plans btn mapButton">Nearby Plans</button>
      <button class="restaurant btn mapButton">Restaurants</button>
      <button class="hotel btn mapButton active">Hotels</button>
      <button class="sight btn mapButton">Sights</button>
    </div>

    <div class="planday_spots">
      <% @spots.each do |spot| %>
        <li>
          <%= spot.name %>
          <%= hidden_field_tag :latitude, spot.lat %>
          <%= hidden_field_tag :longitude, spot.lng %>
        </li>
      <% end %>
    </div>
    <div id="map_canvas">
    </div>
  </div>
</div>

<div class="row">
  <div class="span4 pull-left planSideBar">
    <section class="mainSection">

      <!-- Main Section Title-->
      <h4>United Kingdom<span class="city">London</span></h4>
      <div class="date">28/November/2013</div>
      <div class="time">15<span class="hour">h</span>20<span class="min">m</span></div>
      <div class="budget">15,321<span class="currency">KES</span></div>
    </section>
    <div class="accom-options">
      Accomodiation options
    </div>
    <div class="spots">
      <div class="morning"></div>
      <section>
        <div class="number">0</div>
        <img class="pict">pic</img>
        <h3>Hotel Circle South, San Diego, CA</h3>
        <div class="category">Museum</div>
        <div class="star">★★☆☆☆</div>
        <div class="tags">#Art, animal, wild life</div>
        <div class="budget">150<span class="currency">KES</span></div>
        <div class="time">1<span class="hour">hour</span></div>
        <details>See datails</details>

      </section>
      <section>
        <div class="number">1</div>
        <img class="pict">pic</img>
        <h3>Somewhere Else, Castle Street, Cirencester, United Kingdom</h3>
        <div class="category">Museum</div>
        <div class="star">★★☆☆☆</div>
        <div class="tags">#Art, animal, wild life</div>
        <div class="budget">150<span class="currency">KES</span></div>
        <div class="time">1<span class="hour">hour</span></div>
        <details>See datails</details>

      </section>
      <div class="night"></div>

      <div id="formStuff"><%= render 'form', :action => 'update' %></div>
      <div>
        <div class="spots">
          <%= hidden_field_tag :latitude, '35.712072' %>
          <%= hidden_field_tag :longitude, '139.79494999999997' %>
          　　   </div>
        　</div>

    </div>

  </div>

  <div class="span8 pull-left planSideBar">
     <h2>Full Details of last clicked spot:</h2>
    <h4>Spot Reviews</h4>
    <h4>Spot Photos</h4>
  </div>
</div>

