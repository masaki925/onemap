<% content_for :javascript_includes do %>
  <%= javascript_include_tag "plandays/plandays" %>
<% end %>

<p>
  <b>Plan:</b>
  <%= link_to @planday.plan.title, @planday.plan %>
</p>

<p>
  <b>Day:</b>
  <%= @planday.day %>
</p>
<hr>

<div class="row-fluid">
  <div class="span3">
    <button class="restaurant">restaurant</button>
    <button class="hotel">hotel</button>
    <button class="sight">sight</button>
    <div class="planday_spots">
      <% @spots.each do |spot| %>
        <li>
          <%= spot.name %>
          <%= hidden_field_tag :latitude, spot.lat %>
          <%= hidden_field_tag :longitude, spot.lng %>
        </li>
      <% end %>
    </div>
  </div>
  <div class="span9">
    <div id="map_canvas"></div>
  </div>
</div>

<%= link_to 'Edit', edit_planday_path(@planday) %> |
<%= link_to 'Back', plan_path(@planday.plan) %>
